<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#caf0f8">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Header Background Rectangle -->

        <!-- Profile Image in Circle -->

        <View
            android:id="@+id/header_bg"
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="#00b4d8" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularImageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_account"
            android:background="@drawable/circle_white_border"
            android:elevation="4dp" />

        <!-- Name Text -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circularImageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Loading ..."
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/carter_one" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="' Let's Learn '"
            android:textColor="#03045e"
            android:textSize="20sp"
            android:textStyle="italic"
            android:fontFamily="@font/lancelot" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/verticalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView3"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:padding="16dp" />

    </RelativeLayout>

</FrameLayout>
