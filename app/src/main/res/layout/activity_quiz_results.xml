<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".QuizResults">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/congrats"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/congratulation"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"


        />
    <TextView
        android:id="@+id/successfully"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@+id/congrats"
        android:text="You've successfully completed a quiz "
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/successfully"
        >


        <TextView
            android:id="@+id/ca"
            android:layout_width="206dp"
            android:layout_height="44dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="Correct Answer"
            android:textColor="@color/green"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inca"
            android:layout_width="206dp"
            android:layout_height="44dp"
            android:layout_marginStart="55dp"
            android:layout_marginBottom="253dp"
            android:gravity="center"
            android:text="InCorrect Answer"
            android:textColor="@color/shrine_red"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="92dp"
            android:text="0"

            android:textColor="#00C853"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/incorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="257dp"

            android:text="0"
            android:textColor="#DD2C00"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/StartnewQuiz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_back_green20"
        android:text="Start New Quiz"
        android:textColor="#FFFFFF" />


</RelativeLayout>