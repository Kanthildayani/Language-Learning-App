<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
>

    <!-- Top Semi-Circle Design -->
    <View
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_gravity="top"
        android:background="@drawable/semi_circle" />

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title -->
        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="176dp"
            android:layout_height="82dp"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="112dp"
            android:background="@drawable/box_shape"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="16dp"
            android:text="Login"
            android:textColor="@color/ColorWhite"
            android:textSize="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="258dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_shape_1"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/loginTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_shape_1"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/loginEmail"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Go Button -->
        <Button
            android:id="@+id/goLogin"
            android:layout_width="239dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="84dp"
            android:background="@drawable/curved_button"
            android:text="Go"
            android:textColor="#100A0A"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/loginPassword"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Register Prompt -->
        <TextView
            android:id="@+id/toRegisterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="#222225"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/goLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/toRegisterLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register here"
            android:textColor="#00B4D8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/toRegisterText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
