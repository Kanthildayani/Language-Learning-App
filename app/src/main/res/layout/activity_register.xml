<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
   >

    <View
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:background="@drawable/semi_circle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/go_login"
            android:layout_width="239dp"
            android:layout_height="50dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="84dp"
            android:backgroundTint="@color/ColorWhite"
            android:background="@drawable/curved_button"
            android:text="Login"
            android:textColor="#100A0A"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Rusername" />

        <EditText
            android:id="@+id/Cpasword"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_shape_1"
            android:ems="10"
            android:hint="    Confirm Password"
            android:inputType="text|textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cemail" />

        <EditText
            android:id="@+id/Rusername"
            android:layout_width="258dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_shape_1"
            android:ems="10"
            android:hint="    username"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cemail" />

        <EditText
            android:id="@+id/Rpassword"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_shape_1"
            android:ems="10"
            android:hint="   password "
            android:inputType="text|textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cemail" />

        <EditText
            android:id="@+id/Cemail"
            android:layout_width="258dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_shape_1"
            android:ems="10"
            android:hint="    Email"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="176dp"
            android:layout_height="82dp"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="112dp"
            android:background="@drawable/box_shape"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="16dp"
            android:text="Register"
            android:textColor="@color/ColorWhite"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>