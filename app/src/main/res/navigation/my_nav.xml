<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lla.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_pastFragment"
            app:destination="@id/pastFragment"
            app:enterAnim="@anim/slide_in_animation"
            app:popEnterAnim="@anim/slide_in_bottom" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.lla.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" />
    <fragment
        android:id="@+id/pastFragment"
        android:name="com.example.lla.PastFragment"
        android:label="fragment_past"
        tools:layout="@layout/fragment_past" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.lla.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
</navigation>